<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="show ui centered round image" src="<%= blog.image %>">
      <div class="content">
        <p><%= blog.created.toDateString() %></p>
      </div>
      <div class="description">
        <!-- the ejs - tags parse the data they get-->
        <p><%- blog.body %></p>
      </div>
      <a class="ui orange inverted button" href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form class="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button type="submit" class="ui red inverted button">Delete</button>
      </form>
    </div>
  </div>
  
</div>

<% include ./partials/header %>